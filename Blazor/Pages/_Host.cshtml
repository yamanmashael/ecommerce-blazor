@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace Blazor.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject IConfiguration Configuration
@using Microsoft.AspNetCore.SignalR

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <!-- Blazor Styles -->
    <link href="css/site.css" rel="stylesheet" />
    <link href="Blazor.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="~/images/sds.png" />
    <component type="typeof(HeadOutlet)" render-mode="Server" />

    <!-- Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- Google Auth -->
    <script src="https://accounts.google.com/gsi/client" async defer></script>

    <!-- Syncfusion -->
    <script src="_content/Syncfusion.Blazor.Core/Syncfusion.Blazor.Core.js" type="text/javascript"></script>
</head>
<body>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Main Blazor App -->
    <component type="typeof(App)" render-mode="Server" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <!-- JS Libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>
    <script src="_content/ChartJs.Blazor.Fork/ChartJsBlazorInterop.js"></script>





    <script>
        window.googleAuth = () => {
            return new Promise((resolve, reject) => {
                try {
                    google.accounts.id.initialize({
                        client_id: '@Configuration["Google:ClientId"]',
                        callback: (response) => {
                            if (response && response.credential) {
                                resolve(response.credential);
                            } else {
                                reject("No credential returned");
                            }
                        },
                        auto_select: false,
                    });

                    // فقط عند الضغط على الزر
                    google.accounts.id.renderButton(
                        document.getElementById("googleButtonContainer"),
                        {
                            type: "standard",
                            theme: "outline",
                            size: "large",
                            text: "continue_with",
                            shape: "rectangular"
                        }
                    );
                } catch (ex) {
                    reject(ex);
                }
            });
        };
    </script>


 
    <!-- Custom Site JS -->
    <script src="~/js/site.js"></script>

    <!-- Blazor Framework -->
    <script src="_framework/blazor.server.js"></script>
</body>
</html>
