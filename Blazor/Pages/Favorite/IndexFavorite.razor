@page "/favorites"
@attribute [Authorize]

@using Blazor.Services
@using Blazor.Data

<h3 class="mb-4 text-center text-primary fw-bold">My Favorite Products</h3>

@if (favorites == null)
{
    <div class="text-center mt-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (!favorites.Any())
{
   
}
else
{
    <div class="row g-4">
        @foreach (var item in favorites)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card shadow-sm border-0 product-card">

                    <div class="image-container"
                         @onclick="() => NavigateToProductDetails(item.productId)"
                         @oncontextmenu:preventDefault="true"
                         @oncontextmenu="() => PrevImage(item.FavoriteId)">
                        @if ((item.favoriteImageeDtos ?? Enumerable.Empty<ProductFavoriteImageeDto>()).Any())
                        {
                            var idx = CurrentImageIndex.GetValueOrDefault(item.FavoriteId, 0);
                            <img src="@item.favoriteImageeDtos.ElementAt(idx).ImageFilename"
                                 class="product-image" />
                            <div class="image-index">
                                @(idx + 1)/@item.favoriteImageeDtos.Count()
                            </div>

                       @*      @if (item.favoriteImageeDtos.Count > 1)
                            {
                                <button class="image-btn left" @onclick="() => PrevImage(item.FavoriteId)">◀</button>
                                <button class="image-btn right" @onclick="() => NextImage(item.FavoriteId)">▶</button>
                            } *@
                        }
                        else
                        {
                            <div class="no-image">No Image</div>
                        }
                    </div>

                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">@item.ProductName</h5>
                        <p class="text-muted mb-1">Color: @item.ColorName</p>
                        <p class="text-muted mb-1">Brand: @item.BarndName</p>
                        <h6 class="text-success fw-bold mt-2">@item.SalesPrice.ToString("N0") ل.س</h6>

                        <div class="d-flex justify-content-between mt-3">
                            <button class="btn btn-outline-danger btn-sm"
                                    @onclick="(() => DeleteFavorite(item.FavoriteId))">
                                Remove
                            </button>
                            <a href="/product-details/@item.productId"
                               class="btn btn-outline-primary btn-sm">
                                View
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .product-card {
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .product-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

    .image-container {
        position: relative;
        height: 250px;
        overflow: hidden;
        background-color: #fff;
        border-bottom: 1px solid #eee;
        cursor: pointer;
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: transform 0.4s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.07);
    }

    .no-image {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        color: #888;
        font-size: 14px;
        background: #f9f9f9;
    }

    .image-index {
        position: absolute;
        bottom: 8px;
        right: 10px;
        background: rgba(0, 0, 0, 0.6);
        color: #fff;
        padding: 3px 8px;
        border-radius: 12px;
        font-size: 12px;
    }

    .image-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(255, 255, 255, 0.8);
        border: none;
        border-radius: 50%;
        width: 32px;
        height: 32px;
        font-weight: bold;
        color: #333;
        cursor: pointer;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

        .image-btn:hover {
            background: #007bff;
            color: white;
        }

    .image-container:hover .image-btn {
        opacity: 1;
    }

    .image-btn.left {
        left: 10px;
    }

    .image-btn.right {
        right: 10px;
    }
</style>
