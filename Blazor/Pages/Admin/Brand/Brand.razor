@page "/brands"
@attribute [Authorize(Roles = "Admin")]

@inject IToastService ToastService
@using Blazor.Data
@using Blazor.Services
@using System.ComponentModel.DataAnnotations
@inject IJSRuntime JSRuntime
@layout AdminLayout

@inject CategoryService CategoryService
@inject Blazor.Services.BrandService BrandService

<h3 class="mb-3">Brands</h3>

@if (isLoading)
{
    <p>Loading data...</p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else
{
    <div class="card p-3 mb-4 shadow-sm">
        <h5>Add New Brand</h5>
        <div class="row">
            <div class="col-md-4 mb-2">
                <input class="form-control" placeholder="Brand Name" @bind="newBrand.BarndName" />
            </div>
            <div class="col-md-6 mb-2">
                <input class="form-control" placeholder="Brand Description" @bind="newBrand.BarndDescription" />
            </div>
            <div class="col-md-2 mb-2">
                <button class="btn btn-primary w-100" @onclick="CreateBrand">Add</button>
            </div>
        </div>
    </div>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Brand Name</th>
                <th>Description</th>
                <th style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (brands != null && brands.Any())
            {
                @foreach (var brand in brands)
                {
                    <tr>
                        <td>@brand.Id</td>

                        <td>
                            @if (editingBrand?.Id == brand.Id)
                            {
                                <input class="form-control" @bind="editingBrand.BarndName" />
                            }
                            else
                            {
                                @brand.BarndName
                            }
                        </td>

                        <td>
                            @if (editingBrand?.Id == brand.Id)
                            {
                                <input class="form-control" @bind="editingBrand.BarndDescription" />
                            }
                            else
                            {
                                @brand.BarndDescription
                            }
                        </td>

                        <td>
                            @if (editingBrand?.Id == brand.Id)
                            {
                                <button class="btn btn-success btn-sm me-1" @onclick="() => SaveEdit(brand.Id)">Save</button>
                                <button class="btn btn-secondary btn-sm" @onclick="CancelEdit">Cancel</button>
                            }
                            else
                            {
                                <button class="btn btn-warning btn-sm me-1" @onclick="() => StartEdit(brand)">Edit</button>
                                <button class="btn btn-danger btn-sm" @onclick="() => DeleteBrand(brand.Id)">Delete</button>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">No brands available</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<BrandDto> brands = new();
    private CreateBrandDto newBrand = new();
    private UpdateBrandDto editingBrand;
    private bool isLoading = true;
    private string errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadBrands();
    }

    private async Task LoadBrands()
    {
        isLoading = true;
        var response = await BrandService.GetBrandsAsync();

        if (response.Success)
        {
            brands = response.Data;
        }
        else
        {
            errorMessage = response.ErrorMassage;
        }

        isLoading = false;
    }

    private async Task CreateBrand()
    {
        if (string.IsNullOrWhiteSpace(newBrand.BarndName))
            return;

        var response = await BrandService.CreateBrandAsync(newBrand);
        if (response.Success)
        {
            newBrand = new CreateBrandDto();
            await LoadBrands();
        }
        else
        {
            errorMessage = response.ErrorMassage;
        }
    }

    private void StartEdit(BrandDto brand)
    {
        editingBrand = new UpdateBrandDto
            {
                BarndName = brand.BarndName,
                BarndDescription = brand.BarndDescription
            };
        editingBrand.GetType().GetProperty("Id")?.SetValue(editingBrand, brand.Id);
    }

    private void CancelEdit()
    {
        editingBrand = null;
    }

    private async Task SaveEdit(int id)
    {
        if (editingBrand == null)
            return;

        var response = await BrandService.UpdateBrandAsync(id, editingBrand);
        if (response.Success)
        {
            editingBrand = null;
            await LoadBrands();
        }
        else
        {
            errorMessage = response.ErrorMassage;
        }
    }

    private async Task DeleteBrand(int id)
    {
        var response = await BrandService.DeleteBrandAsync(id);
        if (response.Success)
        {
            await LoadBrands();
        }
        else
        {
            errorMessage = response.ErrorMassage;
        }
    }
}
