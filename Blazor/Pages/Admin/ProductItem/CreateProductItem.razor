@page "/createproductitem/{productId:int}"
@attribute [Authorize(Roles = "Admin")]

@layout AdminLayout

@using Blazor.Data
@using Blazor.Services
@inject ProductItemService ProductItemService
@inject ColorService ColorService
@inject NavigationManager NavigationManager
@inject IToastService toastService

<h3>Add Product Item</h3>
<a href="/productitem/@ProductId" class="btn btn-secondary mb-4">Back to Product Items</a>

<EditForm Model="productItem" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group mb-3">
        <label for="color">Color</label>
        <select id="color" class="form-select" @bind="productItem.ColorId">
            <option value="0">Select Color</option>
            @if (colors != null && colors.Success)
            {
                @foreach (var color in colors.Data)
                {
                    <option value="@color.Id">@color.ColorName</option>
                }
            }
        </select>
    </div>
    <div class="form-group mb-3">
        <label for="price">Price</label>
        <InputNumber id="price" class="form-control" @bind-Value="productItem.Price" />
        <ValidationMessage For="@(() => productItem.Price)" />
    </div>
    <div class="form-group mb-3">
        <label for="salesprice">Sales Price</label>
        <InputNumber id="salesprice" class="form-control" @bind-Value="productItem.SalesPrice" />
        <ValidationMessage For="@(() => productItem.SalesPrice)" />
    </div>
    <div class="form-group mb-3">
        <label for="productCode">Product Code</label>
        <InputText id="productCode" class="form-control" @bind-Value="productItem.product_code" />
        <ValidationMessage For="@(() => productItem.product_code)" />
    </div>
    <button type="submit" class="btn btn-primary">Add Product Item</button>
</EditForm>

@code {
    [Parameter]
    public int ProductId { get; set; }

    private CreateProductItemDto productItem = new CreateProductItemDto();
    private ResponseModel<List<ColorDto>>? colors;

    protected override async Task OnInitializedAsync()
    {
        productItem.ProductId = ProductId;
        colors = await ColorService.GetColorsAsync();
    }

    private async Task HandleValidSubmit()
    {
        var response = await ProductItemService.CreateProductItemAsync(productItem);
        if (response.Success)
        {
            toastService.ShowSuccess("Product item added successfully.");
            NavigationManager.NavigateTo($"/productitem/{ProductId}");
        }
        else
        {
            toastService.ShowError(response.ErrorMassage ?? "Failed to add product item.");
        }
    }
}